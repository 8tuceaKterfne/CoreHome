<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin</title>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/shared/_layout.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark fixed-top">
            <div class="container">
                <a class="navbar-brand" asp-controller="Overview" asp-action="Index">Admin</a>
                <button class="btn navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbar">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Overview" asp-action="Index">Overviewer</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Theme" asp-action="Index">Theme</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div id="content">
        @RenderBody()
    </div>

    <footer class="border-top footer">
        <div class="container">
            <span>&copy; 2020 - LLLXY&nbsp;</span>
            <a asp-controller="Home" asp-action="Logout">退出</a>
        </div>
    </footer>
</body>
</html>
