@model List<Year>

<link rel="stylesheet" href="~/css/archive/index.min.css" />

<div class="container mt-4 mb-5">
    <div class="row">

        <aside class="col-lg-3 d-none d-lg-block">

            @await Component.InvokeAsync("TopTags")
            <br />
            @await Component.InvokeAsync("Categories")

        </aside>

        <section class="col-lg-9 col-md-12">

            <h2>Archive Timeline</h2>
            <hr>
            <ul class="timeline">

                @for (var i = 0; i < Model.Count; i++)
                {
                        <li>
                            <label class="timeline-icon"></label>
                            <div class="timeline-info">
                                <h3>@Model[i].Value</h3>
                                <hr />
                                <div class="timeline-body">
                                    <div class="row">

                                        @{
                                            List<Month> months = Model[i].Months;
                                        }

                                        @for (var j = 0; j < months.Count; j++)
                                        {
                                                <div class="col-md-6 col-sm-6 col-6 article-month">
                                                    <span class="badge badge-secondary float-right">@months[j].Articles.Count</span>
                                                    <a href="/Blog/Archive/@Model[i].Value/@months[j].Value">
                                                        @System.Globalization.CultureInfo.CreateSpecificCulture("en-GB").DateTimeFormat.GetMonthName(months[j].Value)
                                                    </a>
                                                </div>
                                        }

                                    </div>
                                </div>

                            </div>
                        </li>
                }


            </ul>
        </section>

    </div>
</div>