@model List<Category>

<selection>
    <div class="card">
        <div class="card-header">All Categories</div>
        <div class="list-group list-group-flush">

            @if (Model.Count == 0)
            {
                <a class="list-group-item list-group-item-action">There's nothing here.</a>
            }
            else
            {
                @for (var i = 0; i < Model.Count; i++)
                {
                    <a class="list-group-item list-group-item-action" asp-controller="Blog" asp-action="Categories" asp-route-id="@Model[i].CategoriesName">
                        @Model[i].CategoriesName
                    </a>
                }
            }

        </div>
    </div>
</selection>