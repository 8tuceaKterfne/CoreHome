<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="keywords" content="LLLXY,lixinyang,李新阳">
    <meta name="description" content="LLLXY's Blog" />

    <title>LLLXY</title>

    <link rel="shortcut icon" href="~/favicon.ico" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/shared/_layout.min.css" />

    <script type="text/javascript" src="~/lib/jquery/dist/jquery.min.js"></script>
    <script type="text/javascript" src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/lib/darkreader/darkreader.min.js"></script>

    @switch (ThemeService.Theme.ThemeType)
    {
        case ThemeType.Auto:
            @if (DateTime.Now.Hour > 18 || DateTime.Now.Hour < 7)
            {
                <script>DarkReader.enable();</script>
            }
            break;

        case ThemeType.White:
            break;

        case ThemeType.Black:
            <script>DarkReader.enable();</script>
            break;
    }

</head>
<body>

    @await Component.InvokeAsync("Navbar")

    <div id="content">
        @RenderBody()
    </div>

    <footer class="bd-footer text-muted text-center">
        <div class="container-fluid p-3 p-md-5">
            <ul class="bd-footer-links">
                <li><a asp-controller="/Admin" asp-action="Index" target="_blank">Admin</a></li>
                <li><a href="https://github.com/lixinyang123" target="_blank">Github</a></li>
                <li><a asp-controller="/Home" asp-action="Privacy" target="_blank">Privacy</a></li>
                <li><a href="javascript:void();">About</a></li>
            </ul>
            <p>Designed and Developed by <a href="javascript:void()">LLLXY</a> ❤ Powered by <a href="https://dotnet.microsoft.com/" target="_blank">.NET Core</a> 3.1.2</p>
            <p>&copy; 2020 - LLLXY   <a href="http://www.beian.miit.gov.cn/" target="_blank">豫ICP备18041216号</a></p>
        </div>
    </footer>

    <partial name="_CookieConsentPartial" />

    <div id="top" class="gototop js-top">
        <a onclick="MoveTop()"><i>TOP</i></a>
    </div>

    <!-- Main -->
    <script type="text/javascript" src="~/js/shared/_layout.min.js"></script>

</body>
</html>
