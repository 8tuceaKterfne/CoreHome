<!DOCTYPE html>
<html lang="zh-cn">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="keywords" content="LLLXY,lixinyang,李新阳" />
    <meta name="description" content="LLLXY's Blog" />

    <meta property="og:locale" content="zh_cn" />
    <meta property="og:type" content="article" />
    <meta property="og:title" content="LLLXY" />
    <meta property="og:description" content="LLLXY's Blog" />
    <meta property="og:url" content="https://www.lllxy.net/" />
    <meta property="og:site_name" content="LLLXY" />
    <meta property="og:image" content="https://lllxy.oss-cn-shenzhen.aliyuncs.com/CoreHome/Images/user.jpg" />

    <title>@ViewBag.PageTitle | LLLXY</title>

    <link rel="shortcut icon" href="~/favicon.ico" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/shared/_layout.min.css" />

    <script type="text/javascript" src="~/lib/jquery/dist/jquery.min.js"></script>
    <script type="text/javascript" src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/lib/darkreader/darkreader.min.js"></script>

    @switch (ThemeService.Theme.ThemeType)
    {
        case ThemeType.Auto:
            @if (DateTime.Now.Hour > 18 || DateTime.Now.Hour < 7)
            {
                <script>DarkReader.enable();</script>
            }
            break;

        case ThemeType.White:
            break;

        case ThemeType.Black:
            <script>DarkReader.enable();</script>
            break;
    }

</head>
<body>

    @await Component.InvokeAsync("Navbar")

    <div id="content">
        @RenderBody()
    </div>

    <!--footer-->
    <footer class="bd-footer text-muted">

        <div class="container" id="footerInfo">
            <div class="row">

                <div class="col-md-3">
                    <p class="title">What's new</p>
                    <p><a target="blank" href="https://conchbrain.club/">ConchBrain</a></p>
                </div>

                <div class="col-md-3">
                    <p class="title">FriendLinks</p>
                    <p><a target="blank" href="https://lindexi.gitee.io/">林德熙</a></p>
                    <p><a target="blank" href="https://www.ccczg.site/">CCCZG</a></p>
                </div>

                <div class="col-md-3">
                    <p class="title">About</p>
                    <p><a target="blank" href="https://github.com/lixinyang123">GitHub</a></p>
                    <p><a target="blank" href="https://weibo.com/u/5032216997">微博</a></p>
                </div>

                <div class="col-md-3">
                    <p class="title">Others</p>
                    <p><a target="blank" asp-controller="Home" asp-action="Privacy">Privacy&Cookie</a></p>
                    <p><a target="blank" asp-controller="Admin" asp-action="Index">Admin</a></p>
                </div>

            </div>
        </div>

        <div class="container-fluid p-3 p-md-5 text-center">
            <p>
                Designed and Developed by
                <a href="javascript:void(0)"><strong>LLLXY</strong></a>
                <span id="EasterEggs">❤</span> Powered by
                <a href="https://dotnet.microsoft.com/" target="_blank"><strong>.NET Core</strong></a> 3.1.4
            </p>
            <p>
                &copy; 2020 - LLLXY
                <a href="http://www.beian.miit.gov.cn/" target="_blank"><strong>豫ICP备18041216号-2</strong></a>
            </p>
        </div>

    </footer>

    <partial name="_CookieConsentPartial" />

    <div id="top" class="gototop js-top">
        <a onclick="MoveTop()"><i>TOP</i></a>
    </div>

    <!--EasterEggs(Snowfall)-->
    <div class="wrap"></div>
    <style>
        .snowfall-flakes:before {
            content: "";
            position: absolute;
            left: 0px;
            top: 0px;
            width: 10px;
            height: 16px;
            transform: rotate(-45deg);
            background-color: red;
            border-radius: 5px 5px 1px 1px;
        }

        .snowfall-flakes:after {
            content: "";
            position: absolute;
            left: 0px;
            top: 0px;
            width: 10px;
            height: 16px;
            transform: translateX(4.3px) rotate(45deg);
            background-color: red;
            border-radius: 5px 5px 1px 1px;
        }
    </style>

    <!-- Main -->
    <script type="text/javascript" src="~/js/shared/_layout.min.js"></script>

    <!--EasterEggs(click #EasterEggs)-->
    <script src="https://cdn.bootcss.com/JQuery-Snowfall/1.7.4/snowfall.jquery.min.js"></script>
    <script>
        var ee = document.getElementById("EasterEggs");
        ee.style.cursor = "pointer";
        ee.onclick = () => {
            $(document).snowfall({ flakeCount: 100, maxSpeed: 5 });
            document.querySelector("#profile-thumb").src = "https://lllxy.oss-cn-shenzhen.aliyuncs.com/CoreHome/Images/f.jpg";
            document.querySelector("#content > div > div > header > div.container > div > div > div > div > h1 > span").innerText = "f j h ❤ ～";
            MoveTop();
        }
    </script>

</body>
</html>
