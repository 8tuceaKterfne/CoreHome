<!DOCTYPE html>
<html lang="zh-cn">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="keywords" content="LLLXY,lixinyang,李新阳" />
    <meta name="description" content="LLLXY's Blog" />

    <meta property="og:locale" content="zh_cn" />
    <meta property="og:type" content="article" />
    <meta property="og:title" content="LLLXY" />
    <meta property="og:description" content="LLLXY's Blog" />
    <meta property="og:url" content="https://www.lllxy.net/" />
    <meta property="og:site_name" content="LLLXY" />
    <meta property="og:image" content="https://lllxy.oss-cn-shenzhen.aliyuncs.com/CoreHome/Images/user.jpg" />

    <title>@ViewBag.PageTitle | @ProfileService.Config.Name</title>

    <link rel="shortcut icon" href="~/favicon.ico" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/shared/_layout.min.css" />

    <script type="text/javascript" src="~/lib/jquery/dist/jquery.min.js"></script>
    <script type="text/javascript" src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/lib/scrollreveal/dist/scrollreveal.min.js"></script>
    <script type="text/javascript" src="~/lib/darkreader/darkreader.min.js"></script>

    @switch (ThemeService.Config.ThemeType)
    {
        case ThemeType.Auto:
            @if (DateTime.Now.Hour > 18 || DateTime.Now.Hour < 7)
            {
                <script>DarkReader.enable();</script>
            }
            break;

        case ThemeType.White:
            break;

        case ThemeType.Black:
            <script>DarkReader.enable();</script>
            break;
    }

</head>
<body>

    @await Component.InvokeAsync("Navbar")

    <div id="content">
        @RenderBody()
    </div>

    <!--footer-->
    <footer class="bd-footer text-muted">

        <div class="container" id="footerInfo">
            <div class="row">

                <div class="col-md-3">
                    <p class="title">What's new</p>
                    @foreach (var item in ProfileService.Config.WhatsNew)
                    {
                        <p><a target="blank" href="@item.Link">@item.Title</a></p>
                    }
                </div>

                <div class="col-md-3">
                    <p class="title">FriendLinks</p>
                    @foreach (var item in ProfileService.Config.FriendLinks)
                    {
                        <p><a target="blank" href="@item.Link">@item.Title</a></p>
                    }
                </div>

                <div class="col-md-3">
                    <p class="title">About</p>
                    @foreach (var item in ProfileService.Config.About)
                    {
                        <p><a target="blank" href="@item.Link">@item.Title</a></p>
                    }
                </div>

                <div class="col-md-3">
                    <p class="title">Others</p>
                    @foreach (var item in ProfileService.Config.Others)
                    {
                        <p><a target="blank" href="@item.Link">@item.Title</a></p>
                    }
                </div>

            </div>
        </div>

        <div class="container-fluid p-3 p-md-5 text-center">
            <p>
                Designed and Developed by
                <a href="https://www.lllxy.net/"><strong>LLLXY</strong></a>
                ❤ Powered by
                <a href="https://dotnet.microsoft.com/" target="_blank"><strong>.NET Core</strong></a> 3.1.7
            </p>
            <p>
                &copy; 2020 - @ProfileService.Config.Name
                <a href="http://www.beian.miit.gov.cn/" target="_blank"><strong>@ProfileService.Config.ICP</strong></a>
            </p>
        </div>

    </footer>

    <div id="privacy">
        <a asp-controller="Home" asp-action="Privacy">
            <svg width="40" height="130" xmlns="http://www.w3.org/2000/svg" fill="none">
                <g>
                    <title>background</title>
                    <rect fill="none" id="canvas_background" height="132" width="42" y="-1" x="-1" />
                </g>
                <g>
                    <title>Layer 1</title>
                    <rect stroke="null" x="-74.999995" id="svg_1" fill="#004880" transform="rotate(-90 31.500000000000018,67.50000000000001) " height="88.999995" width="212.999992" y="23.000003" />
                    <text transform="rotate(-90 21.804687500000004,63.3359375) " xml:space="preserve" text-anchor="start" font-family="Helvetica, Arial, sans-serif" font-size="20" id="svg_6" y="70" x="-14" stroke-opacity="null" stroke-width="0" stroke="null" fill="#ffffff" font-weight="bold">Privacy</text>
                </g>
            </svg>
        </a>
    </div>

    <div id="top" class="gototop js-top">
        <a onclick="MoveTop()"><i>TOP</i></a>
    </div>

    <!-- Main -->
    <script type="text/javascript" src="~/js/shared/_layout.min.js"></script>

</body>
</html>
