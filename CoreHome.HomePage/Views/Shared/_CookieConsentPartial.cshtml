
@{
    bool showBanner = Context.Request.Cookies.TryGetValue("CookiePolicy", out _);
}

@if (!showBanner)
{
        <nav id="cookieConsent" class="navbar navbar-expand-lg navbar-light bg-light fixed-bottom" style="opacity: 0.8;">
            <div class="container">
                <strong class="navbar-brand">
                    隐私声明
                </strong>
                <button class="btn navbar-toggler" type="button" data-toggle="collapse" data-target="#cookieConsent">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="cookieConsent">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item active">
                            <strong>
                                此站点使用 Cookie 进行分析、显示个性化内容
                            </strong>
                        </li>
                    </ul>
                    <div class="form-inline my-2 my-lg-0">
                        <a asp-controller="Home" asp-action="Privacy" class="btn btn-primary mr-sm-2">了解更多</a>
                        <button id="btn_accept" type="button" class="btn btn-success my-2 my-sm-0" onclick="agree()">确定</button>
                    </div>
                </div>
            </div>
        </nav>

        <script>
            function agree() {
                document.getElementById("cookieConsent").classList.add("invisible");
                setCookie("CookiePolicy", "agree", 1);
            }

            function setCookie(name,value,days)
            {
                var exp = new Date();
                exp.setTime(exp.getTime() + days*24*60*60*1000);
                document.cookie = name + "="+ escape (value) + ";expires=" + exp.toGMTString();
            }
        </script>
}