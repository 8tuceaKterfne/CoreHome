@model List<Article>

@{
    ViewData["Title"] = "Blog";
}

<div id="content">
    <link rel="stylesheet" href="~/css/blog/index.css" />

    <button class="btn btn-primary" onclick="window.location.href='/Admin/Blog/UploadArticle'">Upload</button>

    <table id="articlelist" class="table table-hover">

        <tr id="topbar">
            <td>ID</td>
            <td>Title</td>
            <td>Time</td>
            <td>Modify</td>
            <td>Delete</td>
        </tr>

        @foreach (var artcile in Model)
        {
            <tr>
                <td>@artcile.ID</td>
                <td>@artcile.Title</td>
                <td>@artcile.Time</td>
                <td><a href="/Admin/Blog/ModifyArticle?id=@artcile.ID">Modify</a></td>
                <td><a href="/Admin/Blog/DeleteArticle?id=@artcile.ID">Delete</a></td>
            </tr>
        }

    </table>
</div>
